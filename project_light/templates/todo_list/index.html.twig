{% extends 'base.html.twig' %}

{% block title %}Todo List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">üìã Ma To-Do List</h1>

        <!-- Barre d'actions -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Bouton d'ajout -->
            <a href="{{ path('app_todo_new') }}" class="btn btn-primary">
                ‚ûï Ajouter une t√¢che
            </a>

            <!-- S√©lecteur de langue -->
            <form method="get" class="d-flex align-items-center">
                <label for="languageSelect" class="me-2 fw-bold">üåç Langue :</label>
                <select id="languageSelect" class="form-select form-select-sm w-auto" onchange="changeLanguage(this.value)">
                    {% for lang in languages %}
                        <option value="{{ lang.id }}" {% if lang.id == currentLanguage %}selected{% endif %}>
                            {{ lang.name }}
                        </option>
                    {% endfor %}
                </select>
            </form>

            <!-- Bouton de d√©connexion -->
            <form method="post" action="{{ path('app_logout') }}">
                <button type="submit" class="btn btn-danger">üö™ D√©connexion</button>
            </form>
        </div>

        <script>
            function changeLanguage(lang) {
                window.location.href = "{{ path('app_todo') }}?lang=" + lang;
            }
        </script>


        <!-- Table des t√¢ches -->
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-striped text-center">
                    <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Date de d√©but</th>
                        <th>Date de fin</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for todo in todos %}
                        <tr>
                            <td>{{ todo.name }}</td>
                            <td>{{ todo.beginAt|date('d/m/Y H:i') }}</td>
                            <td>{{ todo.endAt|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" class="btn btn-warning btn-sm">
                                    ‚úèÔ∏è Modifier
                                </a>
                                <form method="post" action="{{ path('app_todo_delete', {'id': todo.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette t√¢che ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                                    <button type="submit" class="btn btn-danger btn-sm">üóë Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-muted">Aucune t√¢che pour le moment.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
