{% extends 'base.html.twig' %}

{% block title %}{{ 'todo_edit.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">✏️ {{ 'todo_edit.title'|trans }}</h1>

        <div class="card shadow p-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="mb-3">
                {{ form_label(form.name, 'todo_edit.task_name'|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.beginAt, 'todo_edit.start_date'|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.beginAt, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.endAt, 'todo_edit.end_date'|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.endAt, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_todo') }}" class="btn btn-secondary">{{ 'todo_edit.back_button'|trans }}</a>
                <button type="submit" class="btn btn-success">{{ 'todo_edit.save_button'|trans }}</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
